model subscription_plan {
  id                Int      @id @default(autoincrement())
  name              String
  description       String?
  features          Json?
  stripe_product_id String
  prices            subscription_price[]
}

model subscription_price {
  id                    Int                 @id @default(autoincrement())
  subscription_plan     subscription_plan   @relation(fields: [plan_id], references: [id])
  plan_id               Int
  stripe_price_id       String
  currency              String
  amount                Decimal             @db.Decimal(10, 2)
  interval              String
}

model subscription {
  id                        String      @id @default(uuid())
  user_id                    String
  stripe_subscription_id    String      @unique
  status                    String
  current_period_start      DateTime
  current_period_end        DateTime
  createdAt                 DateTime    @default(now())
  updatedAt                 DateTime    @updatedAt
  user                      User        @relation(fields: [user_id], references: [id])
  plan_id                   Int
  subscription_plan         subscription_plan @relation(fields: [plan_id], references: [id])


  @@map("subscriptions")
}

model payment {
  id                    String   @id @default(uuid())
  invoice_id            String   @unique
  user_id               String
  amount                Float
  currency              String
  paid_at               DateTime
  createdAt             DateTime @default(now())
  user                  User     @relation(fields: [user_id], references: [id])

  @@map("payments")
}

model feature_flag {
  id            Int               @id @default(autoincrement())
  name          String
  description   String?
  enabled       Boolean           @default(false)
  usage_limit   Int?              // Null implies no limit
  limit_period  LimitPeriod?           // "daily", "weekly", "monthly", etc.
  plans         Subscription_plan[] @relation(references: [id])
}

model user_feature_usage {
  id                Int             @id @default(autoincrement())
  user_id           Int
  feature_flag_id   Int
  timestamp         DateTime        @default(now())
  usage_count       Int             @default(1)

  user              User            @relation(fields: [user_id], references: [id])
  feature_flag      feature_flag    @relation(fields: [feature_flag_id], references: [id])
}

enum LimitPeriod {
  DAILY
  WEEKLY
  MONTHLY
}