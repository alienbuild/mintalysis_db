// schemas/projects/veve/leaderboards.prisma
// Veve Leaderboards

model veve_leaderboard {
  id           Int          @id @default(autoincrement())
  leader_type  String
  wallet_id    String
  count        Int
  datetime     String?
  createdAt    DateTime     @default(now())
  last_updated DateTime?    @db.DateTime(0)
  tag          String?
  wallet       veve_wallets @relation(fields: [wallet_id], references: [id])

  @@index([wallet_id], map: "veve_leaderboard_wallet_id_fkey")
}

model veve_top_wallet_metrics {
  id                Int          @id @default(autoincrement())
  datetime          DateTime?   @db.DateTime(0)
  rank              Int?
  prev_rank         Int?
  rank_change       Int?
  wallet_id         String
  tokens            Int?
  comics            Int?
  collectibles      Int?
  artist_proofs     Int?
  omi_balance       Float?
  mints             Int?
  purchases         Int?
  sales             Int?
  net_accum         Int?
  created_at        DateTime     @default(now())
  updated_at        DateTime?    @db.DateTime(0)
  wallet            veve_wallets @relation(fields: [wallet_id], references: [id])

  @@index([wallet_id], map: "veve_top_wallet_metrics_wallet_id_fkey")
}